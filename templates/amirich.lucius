.main {
  padding-top: 100px;
}

#bigtotal {
  font-weight: bold;
  font-size: 250px;
}

span.perc {
  font-weight: bold;
  font-size: 140px;
}

span.tperc {
  font-weight: bold;
  font-size: 50px;
}

.redtotal {
